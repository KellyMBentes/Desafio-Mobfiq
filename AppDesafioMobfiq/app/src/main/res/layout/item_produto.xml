<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="150dp"
    android:layout_height="400dp"
    android:background="@android:color/white"
    android:layout_gravity="center"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/img_vw_produto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/cafeteira"/>
    <TextView
        android:id="@+id/txt_vw_parcelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12x R$ 99,98"
        android:textColor="@android:color/holo_green_dark"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="14sp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/txt_vw_preco_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 1999,99"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/txt_vw_parcelas"/>
    <TextView
        android:id="@+id/txt_vw_preco_tabela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$2000,00"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/txt_vw_preco_final"/>
    <TextView
        android:id="@+id/txt_vw_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fritadeira Sem Ã“leo Mondial AF-14 Premium 2,2 Litro"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/txt_vw_preco_tabela"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"/>
</RelativeLayout>